<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/RelativeLayout_new_task"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/Edit_textTask"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:fontFamily="@font/cambo"
            android:textColor="@color/purple_700"
            android:layout_height="wrap_content"
            android:hint="Add New Task "
            android:background="@null"
            android:paddingHorizontal="7dp"/>
        <EditText
            android:id="@+id/Edit_text_disc"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/Edit_textTask"
            android:textColor="@color/purple_700"
            android:background="@null"
            android:fontFamily="@font/cambo"
            android:hint="What about Discription"
            android:paddingHorizontal="7dp"/>

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/BTnSavedEdit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@id/Edit_text_disc"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:button_cornerRadius="5dp"
            android:background="@color/design_default_color_primary_dark"
            android:fontFamily="@font/cambo"
            android:text="Save"
            android:textColor="@color/white" />
    </RelativeLayout>




</RelativeLayout>